datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  movies   Movie[]
}

model Movie {
  id             Int      @id @default(autoincrement())
  title          String
  originalTitle  String?
  tagline        String?
  description    String?
  posterUrl      String?
  releaseDate    String?
  duration       String?
  status         String?
  language       String?
  budget         String?
  revenue        String?
  popularity     String?
  voteCount      String?
  rating         String?
  genres         String?
  trailerUrl     String?
  userId         Int
  user           User        @relation(fields: [userId], references: [id])
}