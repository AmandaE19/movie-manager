datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  movies   Movie[]
}

model Movie {
  id            Int      @id @default(autoincrement())
  title         String
  originalTitle String?
  description   String?
  budget        Float?
  releaseDate   DateTime
  duration      Int
  genre         String
  rating        String
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
}